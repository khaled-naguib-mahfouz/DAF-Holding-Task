@{
    ViewData["Title"] = "User Profiles";
}

@if (Model is null )
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No Users!</h4>
        <p class="mb-0">No Users were added yet.</p>
    </div>
}
else
{
  
    <div class="container">
        <h3 class="text-primary text-center">User Profiles</h3>
        <hr />
        <table id="user-profiles" class="table table-striped table-bordered dt-responsive nowrap">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Date Of Birth</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="text-center">
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.DateOfBirth.ToShortDateString()</td>
                        <td >
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-secondary ms-3 ">View</a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary ms-3 ">Edit</a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger ms-3"
                               onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-success ms-3 ">View Posts</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-between align-items-center">
        <a class="btn btn-secondary btn-lg" asp-action="Create">
            <i class="bi bi-plus-circle-dotted"></i>
            Add User
        </a>
        <a class="btn btn-primary btn-lg" asp-controller="Post"
        asp-action="Create">
            <i class="bi bi-plus-circle-dotted"></i>
            Add Post
        </a>
        </div>
    </div>
}
